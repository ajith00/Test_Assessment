<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Create Assessment</title>
  <%- include('../partials/dependencies') %>
</head>
<%- include('../partials/trainer-header') %>

  <body>
    <div class="main_container justify-content-md-center">
      <form action="/submit-questionnaire" method="post" id="questionnaire">
        <div class="child" id="main">
          <div class="row g-2">
            <div class="col-md">
              <div class=" input-group mb-3">
                <span class="input-group-text" for="AssessmentTitle">Title</span>
                <input type="text" class="form-control" id="AssessmentTitle" placeholder="Title Of the Assessment"
                  required>
              </div>
              <div class=" input-group mb-3">
                <span class="input-group-text" for="AssessmentDescriptinon">Description</span>
                <input type="text" class="form-control" id="AssessmentDescriptinon"
                  placeholder="Description Of the Assessment">
              </div>
            </div>

            <div class="col-md">
              <div class="row">
                <!-- <div class="col-md">
                  <div class="input-group mb-3">
                    <span class="input-group-text" for="AssessmentDate">Date</span>
                    <input type="date" name="AssessmentDate" id="AssessmentDate" class="form-control" min="yyyy-mm-dd"
                      required>
                  </div>
                </div> -->
                <div class="col-md">
                  <div class="input-group mb-3">
                    <span class="input-group-text" for="AssessmentTotalMarks">Total Score</span>
                    <input type="number" name="AssessmentTotalMarks" id="AssessmentTotalMarks" class="form-control"
                      value="" min="0" required readonly>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-md">
                  <div class=" input-group mb-3">
                    <span class="input-group-text" for="AssessmentDuration">Duration</span>
                    <input type="number" name="AssessmentDuration" id="AssessmentDuration" class="form-control" min="5"
                      max="180" required placeholder="Min 5">
                    <span class="input-group-text">Minutes</span>
                  </div>
                </div>
                <div class="col-md">
                  <div class=" input-group mb-3">
                    <span class="input-group-text" for="AssessmentCutoff">Cut-Off</span>
                    <input type="number" name="AssessmentCutoff" id="AssessmentCutoff" class="form-control" min="40"
                      max="100" required placeholder="Min 40%">
                    <span class="input-group-text">%</span>
                  </div>
                </div>

              </div>
            </div>
          </div>

          <div class="accordion section mySection" id="accordionSection1" data-section="1"
            onclick="updateActiveSheet(this)">
            <div class="accordion-item">
              <h2 class="accordion-header d-flex justify-content-between">

                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#section1"
                  aria-expanded="true" aria-controls="section1">

                  <input type="text" class="form-control bg-light-subtle border border-light-subtle rounded-pill w-25"
                    name="SectionName" id="" placeholder="Please enter the section-1 name" required>
                  <p class="container px-1 mb-1 text-center">Max-Points:&nbsp;<b><span class="sectionScore"
                        id="sectionScore1">0</b></span></p>
                </button>
              </h2>
              <div id="section1" class="accordion-collapse collapse show" data-bs-parent="#accordionSection1">
                <div class="accordion-body" id="questionsContainer1">
                </div>

                <div class="container px-1 mb-1 text-center">
                  <button type="button" class="btn btn-outline-info rounded-pill" data-bs-toggle="modal"
                    data-bs-target="#AddNewItem">
                    Add <i class="bi bi-plus-circle"></i>
                  </button>
                  <button type="button" class="btn mb-1 btn-outline-danger rounded-pill removeSectionBtn"
                    data-bs-toggle="modal" data-section="1">
                    Delete <i class="bi bi-trash3"></i>
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="container px-1 mb-1 text-center d-grid gap-2 col-2 mx-auto">
          <button type="submit" class="btn btn-outline-success">Save &nbsp;<i class="bi bi-cloud-arrow-up"></i></button>
          <textarea name="JsonFormData" id="JsonFormData" style="display: none;"></textarea>
        </div>
      </form>
    </div>
    </div>


    <!-- Modal -->
    <div class="modal fade" id="AddNewItem" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="exampleModalLabel">Select anything to add to your design</h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <button type="button" class="btn btn-primary mb-3" id="Add_MCQ_Button" data-bs-dismiss="modal">Add MCQ
              Template</button>
            <button type="button" class="btn btn-primary mb-3" id="Add_Boolean_Button" data-bs-dismiss="modal">Add
              Boolean
              Template</button>
            <button type="button" class="btn btn-primary mb-3" id="Add_Section_Button" data-bs-dismiss="modal">Add New
              Section</button>

          </div>
        </div>
      </div>
    </div>
    <!-- Model for Image -->
    <div class="modal fade" id="Image_Model" tabindex="-1" aria-labelledby="Image_Model" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered modal-xl">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <img class="img-fluid" id="img01">
          </div>
        </div>
      </div>
    </div>

  </body>
  <%- include('../partials/dependencies-js') %>
    <script>
      document.getElementById("questionnaire").addEventListener('submit', (e) => {
        e.preventDefault();
        submitForm();
      });

      $('#Image_Model').on('show.bs.modal', function (event) {
      });
    </script>


</html>